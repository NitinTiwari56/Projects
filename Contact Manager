<body>
    <div class="container">
        <div class="header">
            <h1>Contact Manager Pro</h1>
            <p>Manage your business contacts and deals efficiently</p>
        </div>

        <div class="nav-tabs">
            <button class="nav-tab active" onclick="showTab('dashboard')">Dashboard</button>
            <button class="nav-tab" onclick="showTab('add-contact')">Add Contact</button>
            <button class="nav-tab" onclick="showTab('view-contacts')">View Contacts</button>
            <button class="nav-tab" onclick="showTab('reminders')">Reminders</button>
        </div>

        <div class="content">
            <!-- Dashboard Tab -->
            <div id="dashboard" class="tab-content active">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-number" id="total-contacts">0</div>
                        <div>Total Contacts</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="active-deals">0</div>
                        <div>Active Deals</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="pending-reminders">0</div>
                        <div>Pending Reminders</div>
                    </div>
                </div>

                <h2>Recent Contacts</h2>
                <div id="recent-contacts" class="contact-grid">
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                        <h3>No contacts yet</h3>
                        <p>Start by adding your first contact</p>
                    </div>
                </div>
            </div>

            <!-- Add Contact Tab -->
            <div id="add-contact" class="tab-content">
                <h2>Add New Contact</h2>
                <form id="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name *</label>
                            <input type="text" id="firstName" required>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name *</label>
