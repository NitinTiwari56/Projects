                        <label for="reminderDate">Set Reminder</label>
                        <input type="datetime-local" id="reminderDate">
                    </div>

                    <div class="form-group">
                        <label for="notes">Notes</label>
                        <textarea id="notes" rows="4" placeholder="Additional notes about this contact..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Add Contact</button>
                </form>
            </div>

            <!-- View Contacts Tab -->
            <div id="view-contacts" class="tab-content">
                <h2>All Contacts</h2>
                <input type="text" class="search-box" id="search-contacts" placeholder="Search contacts by name, company, or email...">
                <div id="contacts-container" class="contact-grid">
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                        <h3>No contacts found</h3>
                        <p>Add some contacts to get started</p>
                    </div>
                </div>
            </div>

            <!-- Reminders Tab -->
            <div id="reminders" class="tab-content">
                <h2>Reminders</h2>
                <div id="reminders-container">
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                        <h3>No reminders set</h3>
                        <p>Add contacts with reminder dates to see them here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        class ContactManager {
            constructor() {
                this.contacts = this.loadContacts();
                this.init();
            }

            init() {
                this.bindEvents();
                this.updateDashboard();
                this.displayContacts();
                this.displayReminders();
                this.checkReminders();
            }

            bindEvents() {
                document.getElementById('contact-form').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.addContact();
                });

                document.getElementById('search-contacts').addEventListener('input', (e) => {
                    this.searchContacts(e.target.value);
                });

                // Check reminders every minute
                setInterval(() => this.checkReminders(), 60000);
            }

            loadContacts() {
                const contacts = JSON.parse(localStorage.getItem('contacts') || '[]');
                return contacts;
            }

            saveContacts() {
                localStorage.setItem('contacts', JSON.stringify(this.contacts));
            }

            addContact() {
                const formData = {
                    id: Date.now(),
                    firstName: document.getElementById('firstName').value,
                    lastName: document.getElementById('lastName').value,
                    email: document.getElementById('email').value,
                    phone: document.getElementById('phone').value,
                    company: document.getElementById('company').value,
                    position: document.getElementById('position').value,
                    deal: document.getElementById('deal').value,
                    dealValue: document.getElementById('dealValue').value,
                    reminderDate: document.getElementById('reminderDate').value,
                    notes: document.getElementById('notes').value,
                    dateAdded: new Date().toISOString()
                };

                this.contacts.push(formData);
                this.saveContacts();
                this.clearForm();
                this.updateDashboard();
                this.displayContacts();
                this.displayReminders();

                alert('Contact added successfully!');
                showTab('view-contacts');
            }

            clearForm() {
                document.getElementById('contact-form').reset();
            }

            deleteContact(id) {
                if (confirm('Are you sure you want to delete this contact?')) {
                    this.contacts = this.contacts.filter(contact => contact.id !== id);
                    this.saveContacts();
                    this.updateDashboard();
                    this.displayContacts();
                    this.displayReminders();
                }
            }

            searchContacts(query) {
                const filtered = this.contacts.filter(contact => 
                    contact.firstName.toLowerCase().includes(query.toLowerCase()) ||
                    contact.lastName.toLowerCase().includes(query.toLowerCase()) ||
                    contact.email.toLowerCase().includes(query.toLowerCase()) ||
                    contact.company.toLowerCase().includes(query.toLowerCase())
                );
                this.displayContactsList(filtered);
            }

            displayContacts() {
                this.displayContactsList(this.contacts);
            }

            displayContactsList(contacts) {
                const container = document.getElementById('contacts-container');
                const recentContainer = document.getElementById('recent-contacts');
                
                if (contacts.length === 0) {
                    container.innerHTML = `
                        <div class="empty-state">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </svg>
                            <h3>No contacts found</h3>
                            <p>Add some contacts to get started</p>
                        </div>
                    `;
                    recentContainer.innerHTML = container.innerHTML;
                    return;
                }

                const contactsHtml = contacts.map(contact => this.createContactCard(contact)).join('');
                container.innerHTML = contactsHtml;

                // Show recent contacts on dashboard (last 3)
                const recentContacts = contacts.slice(-3);
                recentContainer.innerHTML = recentContacts.map(contact => this.createContactCard(contact)).join('');
            }

            createContactCard(contact) {
                const initials = (contact.firstName[0] + contact.lastName[0]).toUpperCase();
                const dealIndicator = contact.deal ? `<div class="deal-indicator">${this.getDealLabel(contact.deal)}</div>` : '';
                
                return `
                    <div class="contact-card">
                        ${dealIndicator}
                        <div class="contact-header">
                            <div class="contact-avatar">${initials}</div>
                            <div class="contact-info">
                                <h3>${contact.firstName} ${contact.lastName}</h3>
                                <p><strong>üìß ${contact.email}</strong></p>
                                ${contact.phone ? `<p>üìû ${contact.phone}</p>` : ''}
                                ${contact.company ? `<p>üè¢ ${contact.company}</p>` : ''}
                                ${contact.position ? `<p>üíº ${contact.position}</p>` : ''}
                            </div>
                        </div>
                        
                        ${contact.dealValue ? `<p><strong>üí∞ Deal Value: $${parseInt(contact.dealValue).toLocaleString()}</strong></p>` : ''}
                        ${contact.notes ? `<p><strong>üìù Notes:</strong> ${contact.notes}</p>` : ''}
                        ${contact.reminderDate ? `<p><strong>‚è∞ Reminder:</strong> ${new Date(contact.reminderDate).toLocaleString()}</p>` : ''}
                        
                        <div class="contact-actions">
                            <button class="btn btn-danger btn-small" onclick="contactManager.deleteContact(${contact.id})">
                                Delete
                            </button>
                        </div>
                    </div>
                `;
            }

            getDealLabel(dealStatus) {
                const labels = {
                    'potential': 'Potential',
                    'negotiating': 'Negotiating',
                    'closing': 'Closing',
                    'closed': 'Closed'
                };
                return labels[dealStatus] || dealStatus;
            }

            updateDashboard() {
                const totalContacts = this.contacts.length;
                const activeDeals = this.contacts.filter(c => c.deal && c.deal !== 'closed').length;
                const pendingReminders = this.contacts.filter(c => 
                    c.reminderDate && new Date(c.reminderDate) > new Date()
                ).length;

                document.getElementById('total-contacts').textContent = totalContacts;
                document.getElementById('active-deals').textContent = activeDeals;
                document.getElementById('pending-reminders').textContent = pendingReminders;
            }

            displayReminders() {
                const reminders = this.contacts.filter(contact => contact.reminderDate);
                const container = document.getElementById('reminders-container');

                if (reminders.length === 0) {
                    container.innerHTML = `
                        <div class="empty-state">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                            </svg>
                            <h3>No reminders set</h3>
                            <p>Add contacts with reminder dates to see them here</p>
                        </div>
                    `;
                    return;
                }

                // Sort reminders by date
                reminders.sort((a, b) => new Date(a.reminderDate) - new Date(b.reminderDate));

                const remindersHtml = reminders.map(contact => `
                    <div class="reminder-item">
                        <div class="reminder-header">
                            <h4>${contact.firstName} ${contact.lastName}</h4>
                            <span class="reminder-date">${new Date(contact.reminderDate).toLocaleString()}</span>
                        </div>
                        <p><strong>üìß ${contact.email}</strong></p>
                        ${contact.company ? `<p>üè¢ ${contact.company}</p>` : ''}
                        ${contact.deal ? `<p>üíº Deal Status: ${this.getDealLabel(contact.deal)}</p>` : ''}
                        ${contact.notes ? `<p><strong>üìù Notes:</strong> ${contact.notes}</p>` : ''}
                    </div>
                `).join('');

                container.innerHTML = remindersHtml;
            }

            checkReminders() {
                const now = new Date();
                const dueReminders = this.contacts.filter(contact => {
                    if (!contact.reminderDate) return false;
                    const reminderTime = new Date(contact.reminderDate);
                    const timeDiff = reminderTime - now;
                    // Show reminder if it's within 15 minutes
                    return timeDiff > 0 && timeDiff <= 15 * 60 * 1000;
                });

                dueReminders.forEach(contact => {
                    this.showReminderNotification(contact);
                });
            }

            showReminderNotification(contact) {
                if (Notification.permission === 'granted') {
                    new Notification(`Reminder: ${contact.firstName} ${contact.lastName}`, {
                        body: `You have a reminder for ${contact.firstName} ${contact.lastName}`,
                        icon: 'data:image/svg+xml;base64,PHN2ZyB2aWV3Qm94PSIwIDAgMjQgMjQiIGZpbGw9IiM0ZmFjZmUiPjxwYXRoIGQ9Ik0xMiAyQzYuNDggMiAyIDYuNDggMiAxMnM0LjQ4IDEwIDEwIDEwIDEwLTQuNDggMTAtMTBTMTcuNTIgMiAxMiAyem0tMiAxNWwtNS01IDEuNDEtMS40MUwxMCAxNC4xN2w3LjU5LTcuNTlMMTkgOGwtOSA5eiIvPjwvc3ZnPg=='
                    });
                } else {
                    alert(`Reminder: You have a reminder for ${contact.firstName} ${contact.lastName}`);
                }
            }
        }

        // Tab functionality
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            // Remove active class from all tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });

            // Show selected tab content
            document.getElementById(tabName).classList.add('active');

            // Add active class to clicked tab
            event.target.classList.add('active');
        }

        // Initialize the contact manager
        let contactManager;

        document.addEventListener('DOMContentLoaded', () => {
            contactManager = new ContactManager();

            // Request notification permission
            if ('Notification' in window && Notification.permission === 'default') {
                Notification.requestPermission();
            }
        });
    </script>
</body>
</html>
